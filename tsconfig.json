{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": ".",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "paths": {
      "@/generated/prisma/client": ["src/generated/prisma/"] 
    }
  },
  "include": ["src/**/*"]
}